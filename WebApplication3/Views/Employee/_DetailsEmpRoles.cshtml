@model IEnumerable<WebApplication3.Models.Entities.EmpRole>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Role)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="rowRole_@item.Id">
                    <td>
                        @Html.DisplayFor(modelItem => item.Role.Name)
                    </td>
                    <td>
                        <button class="btn btn-danger float-right mr-1" onclick="Delete('/Employee/DeleteEmpRole/@item.Id', '#rowRole_@item.Id')"><i class="bi bi-trash3-fill"></i> Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
