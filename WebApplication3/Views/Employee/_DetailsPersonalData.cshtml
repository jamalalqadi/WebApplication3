@model WebApplication3.Models.Entities.PersonalData

    <div class="card mb-3">
        <div class="card-header">
            <h5 class="card-title d-inline">PersonalData</h5>
            @if (Model.Id > 0)
            {
                <a class="btn btn-primary mr-2 float-right" asp-action="CreateOrEditPersonalData" asp-route-id="@Model.Id" asp-route-EmployeeId="@Model.EmployeeId"><i class="bi bi-pencil-square"></i> Edit</a>
            }
            else
            {
                <a class="btn btn-sm btn-success float-right" asp-action="CreateOrEditPersonalData" asp-route-id="0" asp-route-EmployeeId="@Model.EmployeeId">
                    <i class="bi bi-plus-circle"></i>
                    Create New
                </a>
            }
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>
                <dt class="col-sm-12">
                    @Html.DisplayNameFor(model => model.ImgUrl)
                </dt>
            </dl>
            <div class="card mb-3" style="width:250px">
                <img id="Picture" src="/Uploads/@(Model.ImgUrl??"avatar-male.jpg")" style="height: 250px" alt="Picture" asp-append-version="true">
            </div>
        </div>
    </div>
