@model IEnumerable<WebApplication3.Models.Entities.Role>

@{
    ViewData["Title"] = "Roles";
}
@section Section_btn{
    <div class="btn-toolbar">
        <a type="button" class="btn btn-sm btn-success" asp-action="Create">
            <i class="bi bi-plus-circle"></i>
            Create New
        </a>
    </div>
}
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <button class="btn btn-danger float-right mr-1" onclick="Delete('/Role/Delete/@item.Id', '#row_@item.Id')"><i class="bi bi-trash3-fill"></i> Delete</button>
                        <a class="btn btn-primary float-right mr-1" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a class="btn btn-info float-right mr-1" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye-fill"></i> Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
